{% extends 'panelPrincipalBase.html.twig' %}
{% block contenidoPanel %}
    <div class="text-center">
        <div id="divMensaje"></div>
    </div>
    <div id="contenedorTabla">
        {% include "actividades/tablaActividades.html.twig" %}
    </div>

    <!-- Modal Structure -->
    <div id="modalActividad" class="modal">
        <div class="modal-content">
            <div id="divMensajeModal" class="error oculto"></div>
            {% include "actividades/formularioActividad.html.twig" %}
            {% include "actividades/detallesActividad.html.twig" %}
        </div>
        <div class="modal-footer no-overflow">
            <input class="waves-effect waves-light btn" type="button" id="cerrarModal" value="Cerrar">
            <input class="waves-effect waves-light btn" id="nuevaActividad" type="submit" form="formularioActividad" value="Registrar actividad">
            <input class="waves-effect waves-light btn" id="modificarActividad" form="formularioActividad" type="button" value="Guardad cambios">
            <input class="waves-effect waves-light btn" id="suscribirseActividad" form="formularioActividad" type="button" value="Suscribirse a la actividad">
        </div>
    </div>
    <script type="text/javascript" src="/public/asset/js/gestionActividades.js"></script>
    <script type="text/javascript" src="/public/lib/timepicki/js/timepicki.js"></script>
{% endblock %}
