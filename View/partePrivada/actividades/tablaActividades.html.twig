<table id="tablaActividades" class="bordered  table-centered responsive-table tablaCentrado">
    <thead>
        <tr>
            <td>Codigo</td>
            <td>Título</td>
            <td>Estado</td>
            <td>Ubicación</td>
            <td>Fecha Inicio</td>
            <td>Fecha Fin</td>
            <td>Descriptor</td>
            <td>
                {% if esAdministrador != null %}
                    <a href="#" data-action="nuevo"><i class="fa fa-plus"></i></a>
                    {% endif %}
            </td>
        </tr>
    </thead>
    <tbody>
        {% for actividad in actividades %}
            <tr>
                <td>{{ actividad.codigo_actividad }}</td>
                <td>{{ actividad.titulo }}</td>
                <td>{{ actividad.estado }}</td>
                <td>{{ actividad.ubicacion }}</td>
                <td>{{ actividad.fecha_inicio }}</td>
                <td>{{ actividad.fecha_fin }}</td>
                <td>{{ actividad.descriptor }}</td>
                <td>
                    <div class="icons-container">
                        <a href="#" data-action="detalles" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-search-plus"></i></a>
                            {% if esAdministrador != null %}
                            <a href="#" data-action="editar" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-pencil"></i></a>
                            <a href="#" data-action="borrar" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-times"></i></a>
                            {% endif %}
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
    
<div class="center-align">
    <ul class="pagination" id="paginacion" data-pagina="{{pagina}}">
        {% if pagina > 3 %}
            <li class="colorPagina" data-pagina="1"><a href="#">Primera</a></li>
            {% endif %}

        {% if pagina > 1 %}
            <li class="colorPagina" data-pagina="{{(pagina - 1)}}"><a href="#">Anterior</a></li>
            {% endif %}

        {% for numero in arrayNumeros %}
            {% if numero == pagina %}
                <li class="paginaActual" data-pagina="{{numero}}"><a href="#">{{numero}}</a></li>
                {% else %}
                <li class="colorPagina" data-pagina="{{numero}}"><a href="#">{{numero}}</a></li>
                {% endif %}
            {% endfor %}

        {% if pagina < totalPaginas %}
            <li class="colorPagina" data-pagina="{{(pagina + 1)}}"><a href="#">Siguiente</a></li>
            {% endif %}

        {% if pagina < (totalPaginas - 2) %}
            <li class="colorPagina" data-pagina="{{totalPaginas}}"><a href="#">Última</a></li>
            {% endif %}
    </ul>
</div>